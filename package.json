{
  "name": "cross-platform-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Shorts Track Skipper web + multi-browser extensions",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "build": "pnpm run -r build",
    "build:web": "pnpm --filter @ext/web build",
    "build:extensions": "node ./tools/scripts/build-extensions.mjs",
    "dev": "pnpm --filter @ext/web dev",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "clean": "rimraf node_modules pnpm-lock.yaml && pnpm run -r clean || exit 0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.28",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "adm-zip": "^0.5.16",
    "chromedriver": "^142.0.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.0",
    "selenium-webdriver": "^4.38.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
